int main()
{
  string path;
  string path2;
  int i;
  int j;
  int sum;
  byte[3][600][400] a;
  byte[3][600][400] b;
  path = "./cat-stripped.ppm";
  path2 = "./cat-check-blur.ppm";
  read(path, a);
  for (i = 1 ; i < 399 ; i = i + 1) {
    for (j = 1; j < 599 ; j = j + 1 ) {
      sum = 0;
      sum = sum + a[0][j-1][i+1];
      sum = sum + a[0][j-1][i-1];
      sum = sum + 2 * a[0][j-1][i];
      sum = sum + 2 * a[0][j+1][i];
      sum = sum + a[0][j+1][i+1];
      sum = sum + a[0][j+1][i-1];
      sum = sum + 2 * a[0][j][i+1];
      sum = sum + 2 * a[0][j][i-1];
      sum = sum + 4 * a[0][j][i];
      sum = sum/16;
      b[0][j][i] = sum;
      sum = 0;
      sum = sum + a[1][j-1][i+1];
      sum = sum + a[1][j-1][i-1];
      sum = sum + 2 * a[1][j-1][i];
      sum = sum + 2 * a[1][j+1][i];
      sum = sum + a[1][j+1][i+1];
      sum = sum + a[1][j+1][i-1];
      sum = sum + 2 * a[1][j][i+1];
      sum = sum + 2 * a[1][j][i-1];
      sum = sum + 4 * a[1][j][i];
      sum = sum/16;
      b[1][j][i] = sum;
      sum = 0;
      sum = sum + a[2][j-1][i+1];
      sum = sum + a[2][j-1][i-1];
      sum = sum + 2 * a[2][j-1][i];
      sum = sum + 2 * a[2][j+1][i];
      sum = sum + a[2][j+1][i+1];
      sum = sum + a[2][j+1][i-1];
      sum = sum + 2 * a[2][j][i+1];
      sum = sum + 2 * a[2][j][i-1];
      sum = sum + 4 * a[2][j][i];
      sum = sum/16;
      b[2][j][i] = sum;
    }
  }
  write(path2, b);
  return 0;
}
